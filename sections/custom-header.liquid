{% comment %}
  Custom Header Section
{% endcomment %}

<div class="custom-header">
  <div class="container">
    <div class="header-inner">
      <!-- Navigation Menu -->
      <div class="header-navigation">
        <nav class="main-nav">
          <ul>
            {% for block in section.blocks %}
              <a href="{{ block.settings.url }}">{{ block.settings.title }}</a>
            {%- endfor %}
            {% for link in section.settings.menu.links %}
              <li>
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </nav>
      </div>

      <!-- Search Bar -->
      <div class="header-search">
        <form action="{{ routes.search_url }}" method="get" class="search-form">
          <input type="text" name="q" placeholder="Search our store" class="search-input">
          <button type="submit" class="search-button">
            <i class="icon-search"></i>
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<style>
  .custom-header {
    background-color: #f8f8f8;
    padding: 10px 0;
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }


  .header-navigation .main-nav ul {
    list-style: none;
    display: flex;
    margin: 0;
    padding: 0;
  }

  .header-navigation .main-nav ul li {
    margin-right: 20px;
  }

  .header-navigation .main-nav ul li a {
    text-decoration: none;
    color: #333;
  }

  .header-search .search-form {
    display: flex;
    align-items: center;
  }

  .header-search .search-input {
    border: 1px solid #ccc;
    padding: 5px 10px;
    border-radius: 3px;
  }

  .header-search .search-button {
    background: none;
    border: none;
    padding: 5px;
    cursor: pointer;
  }

  .header-search .icon-search:before {
    content: "\f002";
    font-family: FontAwesome;
  }
</style>

{% schema %}
{
  "name": "custom header",
    "class": "section-header",
  "settings": [
        ],
  "blocks": [
    {
      "type": "text",
      "name": "Menu",
      "settings": [{
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "url",
          "id": "url",
          "label": "URL"
        },
         {
      "type": "link_list",
      "id": "menu",
      "label": "t:sections.header.settings.menu.label"
    }]
    }],
   "presets": [
  {
    "name": "custom-header","blocks": [
      {
         "type":"text"
      }
    ]
  }
]
}
{% endschema %}

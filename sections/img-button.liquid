{{ 'img-btn.css' | asset_url | stylesheet_tag }}
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<div class="main-img">
  <div class="img">
    {% if section.settings.image_with_text != blank %}
      <img src="{{ section.settings.image_with_text | img_url: '' }}">
    {% else %}
      {{ 'image' | placeholder_svg_tag }}
    {% endif %}
  </div>
  <div class="img-btn">
    <a href="{{ section.settings.btn_link }}"
      ><button class="img-bnt-btn">{{ section.settings.btn_text }}</button></a
    >
  </div>
</div>

{% schema %}
{
  "name": "img-btn",
  "settings": [
 {
  "type": "image_picker",
  "id": "image_with_text",
  "label": "Image"
},
     {
       "type": "url",
        "id": "btn_link",
        "label": "Button link"
     },
     {
       "type": "text",
        "id": "btn_text",
        "label": "Button link",
       "default":"FIND YOUR PERFECT ILASH"
     }
  ],
  "presets": [
  {
    "name": "img-btn"
  }
]
}
{% endschema %}

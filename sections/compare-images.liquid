<head>
  {{ 'compare-image.css' | asset_url | stylesheet_tag }}

  <script src="{{ 'compare-image.js' | asset_url }}" defer="defer"></script>
</head>
<div class="main-container">
  <div class="container">
    <div class="mask-container">
      <div class="mask-image-container"></div>
    </div>

    <div class="border"></div>
    <div class="circle">
      <svg
        aria-hidden="true"
        focusable="false"
        role="presentation"
        class="icon icon-chevron-left"
        viewBox="0 0 284.49 498.98"
      >
        <path d="M249.49 0a35 35 0 0 1 24.75 59.75L84.49 249.49l189.75 189.74a35.002 35.002 0 1 1-49.5 49.5L10.25 274.24a35 35 0 0 1 0-49.5L224.74 10.25A34.89 34.89 0 0 1 249.49 0Z"></path>
      </svg>
      <svg
        aria-hidden="true"
        focusable="false"
        role="presentation"
        class="icon icon-chevron-right"
        viewBox="0 0 284.49 498.98"
      >
        <title>icon-chevron</title><path d="M35 498.98a35 35 0 0 1-24.75-59.75l189.74-189.74L10.25 59.75a35.002 35.002 0 0 1 49.5-49.5l214.49 214.49a35 35 0 0 1 0 49.5L59.75 488.73A34.89 34.89 0 0 1 35 498.98Z"></path>
      </svg>
    </div>
  </div>
</div>

<style>
  .container{
     background-image: url({{section.settings.compare_image | img_url: ''}});
  }
   .mask-image-container{
     background-image: url({{section.settings.compare_image2 | img_url: ''}});
  }
</style>

{% schema %}
{
  "name": "compare-images",
  "settings": [
            {
  "type": "image_picker",
  "id": "compare_image",
  "label": "Image"
},
    {
  "type": "image_picker",
  "id": "compare_image2",
  "label": "Image"
}

  ],
   "presets": [
    {
      "name": "compare-images"
    }
  ]
}
{% endschema %}

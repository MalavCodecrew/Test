{{ 'subscribe-save.css' | asset_url | stylesheet_tag }}
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<div class="main1">
  <div class="sub-1">
    <div class="title">
      <h3>{{ section.settings.title }}</h3>
    </div>
    <div class="desc">
      <p>{{ section.settings.Description }}</p>
    </div>
    <div class="btn">
      <a href="{{ section.settings.sub_button_link }}"
        ><button class="sub-btn">{{ section.settings.sub_button }}</button></a
      >
    </div>
  </div>

  <div class="sub-2">
    <div class="img-1">
      {% if section.settings.image_1 != blank %}
        <img src="{{ section.settings.image_1 | img_url: '' }}">
      {% else %}
        {{ 'image' | placeholder_svg_tag }}
      {% endif %}
      <div class="discount-label">
        <label>{{ section.settings['discount-label'] }}</label>
      </div>
      <div class="img-2">
        {% if section.settings.image_2 != blank %}
          <img src="{{ section.settings.image_2 | img_url: '' }}">
        {% else %}
          {{ 'image' | placeholder_svg_tag }}
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "subscribe-save",
  "settings": [
    {
        "type": "text",
        "id": "title",
        "label": "Title"
      },

       {
        "type": "text",
        "id": "Description",
        "label": "Description"
      },
     {
     "type": "url",
      "id": "sub_button_link",
      "label": "Button link"
   },
   {
     "type": "text",
      "id": "sub_button",
      "label": "Button link",
     "default":"SUBSCRIBE HERE"
   },
     {
  "type": "image_picker",
  "id": "image_1",
  "label": "Image1"
},
     {
        "type": "text",
        "id": "discount-label",
        "label": "Discount"
      },
     {
  "type": "image_picker",
  "id": "image_2",
  "label": "Image2"
}
  ],
  "presets": [
  {
    "name": "subscribe-save"
  }
]
}
{% endschema %}

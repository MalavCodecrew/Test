<div class="related">
  <div class="width">
    <h2>You may like:</h2>
    <div class="custom-related-products"></div>
  </div>
</div>
{% if cart.item_count > 0 %}
  {% assign relatedId = cart.items[0].product_id %}
{% endif %}

<script>
  fetch(window.Shopify.routes.root + "recommendations/products.json?product_id=48903798325526")
  .then(response => response.json())
  .then(({ products }) => {
    if (products.length > 0) {
      const firstRecommendedProduct = products[0];

      alert(
        `The title of the first recommended product is: ${firstRecommendedProduct.title}`
      );
    }
  }
);
</script>
{% schema %}
{
  "name": "custom-related-products",
  "settings": [],
   "presets": [
    {
      "name": "custom-related-products"
    }
  ]
}
{% endschema %}

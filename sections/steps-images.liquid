{% style %}
  .image-steps{
              display:flex;
              text-align:center;
              justify-content: center;
              margin: 0 auto;
              line-height: 0em;
              }
  .main-steps {
            text-align: center;
            width: 85%;
            margin-left: 7%;
               }
  .image-new-step img{
            width:85%
              }
  .main-steps-title h1{
        font-family:timesnewroman;
        color: #7a2323
                }
  .image-new-step h3,p{
        font-family:timesnewroman;
                 }

   @media only screen and (max-width: 425px) {
         .image-steps{
         display:contents;
        }
      }
{% endstyle %}
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<div class="main-steps">
  <div class="main-steps-title">
    <h1>{{ section.settings['ilashuk-title'] }}</h1>
  </div>
  <div class="image-steps">
    {% for block in section.blocks %}
      <div class="image-new-step">
        {% if block.settings.image_with_text_ilash != blank %}
          <img src="{{ block.settings.image_with_text_ilash | img_url: '' }}">
        {% else %}
          {{ 'image' | placeholder_svg_tag }}
        {% endif %}
        <h3>{{ block.settings['ilashuk-image-title'] }}</h3>
        <p>{{ block.settings['ilashuk-name'] }}</p>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "steps-images",
  "settings": [
        {
          "type": "text",
          "id": "ilashuk-title",
          "label": "Title"
        }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "text",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_with_text_ilash",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "ilashuk-image-title",
          "label": "image-Title"
        },
        {
          "type": "text",
          "id": "ilashuk-name",
          "label": "Name"
        }
      ]

     }
  ],

  "presets": [
  {
    "name": "steps-images",
    "blocks": [
      {
         "type":"text"
      }
    ]
  }
]
}
{% endschema %}
